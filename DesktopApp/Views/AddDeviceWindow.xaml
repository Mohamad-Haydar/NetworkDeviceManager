<Window x:Class="DesktopApp.Views.AddDeviceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopApp.Views"
        mc:Ignorable="d"
        Title="AddDeviceWindow" Height="450" Width="300">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- Login Title -->
        <TextBlock Grid.Row="0" Text="Add Device" VerticalAlignment="Center" HorizontalAlignment="Center"
                FontSize="40" FontWeight="Bold" Foreground="#2c3e50"/>

        <!-- Device Name -->
        <TextBlock Grid.Row="1" Width="70" Text="Device Name" HorizontalAlignment="Left" 
                VerticalAlignment="Center" Margin="30,5,5,5"/>
        <TextBox Grid.Row="1" Width="150" HorizontalAlignment="Right" Margin="5,5,30,5" Height="20px" 
              VerticalAlignment="Center" BorderBrush="#2c3e50" Name="DeviceName" />

        <!-- Device Type -->
        <TextBlock Grid.Row="2" Width="70" Text="Device Type" HorizontalAlignment="Left" 
        VerticalAlignment="Center" Margin="30,5,5,5"/>
        <TextBox Grid.Row="2" Width="150" HorizontalAlignment="Right" Margin="5,5,30,5" Height="20px" 
      VerticalAlignment="Center" BorderBrush="#2c3e50" Name="DeviceType" />

        <!-- Ip Address -->
        <TextBlock Grid.Row="3" Width="70" Text="Ip Address" HorizontalAlignment="Left" 
                    VerticalAlignment="Center" Margin="30,5,5,5"/>
        <TextBox Grid.Row="3" Width="150" HorizontalAlignment="Right" Margin="5,5,30,5" Height="20px" 
                VerticalAlignment="Center" BorderBrush="#2c3e50" Name="IpAddress" />

        <!-- Location -->
        <TextBlock Grid.Row="4" Width="70" Text="Location" HorizontalAlignment="Left" 
            VerticalAlignment="Center" Margin="30,5,5,5"/>
        <TextBox Grid.Row="4" Width="150" HorizontalAlignment="Right" Margin="5,5,30,5" Height="20px" 
        VerticalAlignment="Center" BorderBrush="#2c3e50" Name="Location" />

        <!-- Submit Btn -->
        <Button Grid.Row="5" Width="100" Height="30" Background="#2c3e50" Content="Submit" 
             Foreground="White" Name="AddDevice" Click="AddDevice_Click" />

    </Grid>

</Window>
