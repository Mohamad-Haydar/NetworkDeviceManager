<Window x:Class="DesktopApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <Grid.RowDefinitions>
            <!-- Top navbar -->
            <RowDefinition Height="Auto"/>
            <!-- Controls row -->
            <RowDefinition Height="Auto"/>
            <!-- DataGrid -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Navbar -->
        <DockPanel Grid.Row="0" Background="#2c3e50" Height="40">
            <TextBlock Text="Network Device Manager" 
                       Foreground="White" FontSize="16" 
                       VerticalAlignment="Center" Margin="10,0"/>
            <Button Content="Logout" 
                    VerticalAlignment="Center"
                    Width="75" Margin="0,5,10,5" 
                    HorizontalAlignment="Right"
                    Click="Logout_Click"/>
        </DockPanel>

        <!-- Filter + Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10" VerticalAlignment="Center">
            <TextBox Name="txtFilter" Width="200" Margin="0,0,10,0" />
            <Button Content="Add" Width="75" Margin="0,0,5,0" Click="Add_Click"/>
            <Button Content="Edit" Width="75" Margin="0,0,5,0" Click="Edit_Click"/>
            <Button Content="Delete" Width="75" Click="Delete_Click"/>
        </StackPanel>

        <!-- Data Table -->
        <DataGrid Name="deviceDataGrid" Grid.Row="2" Margin="10"
                  AutoGenerateColumns="False" IsReadOnly="True"
                  SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding DeviceName}" Width="*"/>
                <DataGridTextColumn Header="Type" Binding="{Binding DeviceType}" Width="*"/>
                <DataGridTextColumn Header="IP Address" Binding="{Binding IpAddress}" Width="*"/>
                <DataGridTextColumn Header="Location" Binding="{Binding Location}" Width="*"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*">

                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="{x:Type TextBlock}">

                            <Setter Property="Background" Value="Gray"/>
                            <Setter Property="Foreground" Value="white"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="TextAlignment" Value="Center"/>

                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Status}" Value="Online">
                                    <Setter Property="Background" Value="Green" />
                                </DataTrigger>

                                <DataTrigger Binding="{Binding Status}" Value="Offline">
                                    <Setter Property="Background" Value="Red" />
                                </DataTrigger>

                                <DataTrigger Binding="{Binding Status}" Value="Checking...">
                                    <Setter Property="Background" Value="Yellow" />
                                    <Setter Property="Foreground" Value="Black" />
                                </DataTrigger>

                            </Style.Triggers>
                        </Style>
                    </DataGridTextColumn.ElementStyle>

                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
